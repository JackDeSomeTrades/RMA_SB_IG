<robot
  name="belt_right"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- extend xacro functionality with macros of urdf_utils -->
  <xacro:include filename="$(find urdf_utils)/urdf/properties/defaults.xacro" />

  <!-- start of manually added component -->
  <joint
    name="gripper_y_right_to_belt_right"
    type="fixed">
    <parent
      link="gripper_y_right_link" />
    <child
      link="conveyor_belt_right_base_link" />
  </joint>

  <!-- prismatic joint travelling along conveyor belt plane -->
  <link
    name="conveyor_belt_right_link">
    <xacro:point_inertial mass="0.5" />
  </link>
  <joint
    name="conveyor_belt_right"
    type="prismatic">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_right_surface_foremost_link" />
    <child
      link="conveyor_belt_right_link" />
    <axis
      xyz="-1 0 0" />
    <!-- TODO: swap limit out for macro from dimensioning notebook -->
    <limit
      effort="30"
      velocity="1"
      lower="0"
      upper="0.60"/>
  </joint>

  <!-- start of autogenerated component -->
  <link
    name="conveyor_belt_right_base_link">
    <inertial>
      <origin
        xyz="0.353839700449319 -0.0342492002501805 -0.0100000000278072"
        rpy="0 0 0" />
      <mass
        value="1.75237629293966" />
      <inertia
        ixx="0.00106107197657959"
        ixy="3.25747306440015E-06"
        ixz="3.63423703976073E-13"
        iyy="0.0518565044065418"
        iyz="-3.83928274166947E-14"
        izz="0.0519817058628901" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_right_base_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.698039215686274 0.698039215686274 0.698039215686274 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_right_base_link.STL" />
      </geometry>
    </collision>
  </link>
  <link
    name="conveyor_belt_right_foremost_link" />
  <joint
    name="belt_right_base_to_foremost"
    type="fixed">
    <origin
      xyz="0.718038238155445 -0.0339999999950005 0.02174"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_right_base_link" />
    <child
      link="conveyor_belt_right_foremost_link" />
    <axis
      xyz="0 0 0" />
  </joint>
  <link name="conveyor_belt_right_surface_foremost_link" >
    <xacro:point_mass_inertial />
  </link>
  <joint
    name="belt_right_base_to_surface_foremost"
    type="fixed">
    <origin
      xyz="0.686298238155445 -0.0339999999950005 0.02174"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_right_base_link" />
    <child
      link="conveyor_belt_right_surface_foremost_link" />
    <axis
      xyz="0 0 0" />
  </joint>

</robot>