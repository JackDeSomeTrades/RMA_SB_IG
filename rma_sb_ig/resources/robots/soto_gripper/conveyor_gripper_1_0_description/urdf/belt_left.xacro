<robot
  name="belt_left"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- extend xacro functionality with macros of urdf_utils -->
  <xacro:include filename="$(find urdf_utils)/urdf/properties/defaults.xacro" />
  <xacro:include filename="$(find urdf_utils)/urdf/origin.xacro" />
  <xacro:include filename="$(find urdf_utils)/urdf/parent.xacro" />

  <!-- Load default joint data from yaml files in config directory. -->
  <!-- If additional data is present in cman, use it to overwrite the default one. -->
  <xacro:property
      name="cman_joints"
      value="${load_cman('conveyor_gripper_1_0_description', 'conveyor_gripper_1_0_description.yaml', '')}" />

  <!-- start of manually added component -->
  <joint
    name="gripper_y_left_to_belt"
    type="fixed">
    <parent
      link="gripper_y_left_link" />
    <child
      link="conveyor_belt_left_base_link" />
  </joint>

  <!-- prismatic joint travelling along conveyor belt plane -->
  <link
    name="conveyor_belt_left_link">
    <xacro:point_inertial mass="0.5" />
  </link>
  <joint
    name="conveyor_belt_left"
    type="prismatic">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_left_surface_foremost_link" />
    <child
      link="conveyor_belt_left_link" />
    <axis
      xyz="-1 0 0" />
    <!-- TODO: swap limit out for macro from dimensioning notebook -->
    <limit
      effort="30"
      velocity="1"
      lower="0"
      upper="0.60"/>
  </joint>

  <!-- start of autogenerated component -->
  <link
    name="conveyor_belt_left_base_link">
    <inertial>
      <origin
        xyz="0.351579454282733 -0.0337525735461215 -0.00999999997239077"
        rpy="0 0 0" />
      <mass
        value="1.76493912170865" />
      <inertia
        ixx="0.00108186929664942"
        ixy="-4.24450588331179E-06"
        ixz="-4.73563126814083E-13"
        iyy="0.0531142162231874"
        iyz="-3.84792553638102E-14"
        izz="0.0532602149996055" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_left_base_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_left_base_link.STL" />
      </geometry>
    </collision>
  </link>
  <link
    name="conveyor_belt_left_foremost_link" />
  <joint
    name="base_left_to_foremost"
    type="fixed">
    <origin
      xyz="0.718038238155445 -0.0339999999950005 0.02174"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_left_base_link" />
    <child
      link="conveyor_belt_left_foremost_link" />
    <axis
      xyz="0 0 0" />
  </joint>
  <link name="conveyor_belt_left_surface_foremost_link" >
    <xacro:point_mass_inertial />
  </link>
  <joint
    name="belt_left_to_surface_foremost"
    type="fixed">
    <origin
      xyz="0.686298238155445 -0.0339999999950005 0.02174"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_left_base_link" />
    <child
      link="conveyor_belt_left_surface_foremost_link" />
    <axis
      xyz="0 0 0" />
  </joint>
  <link
    name="conveyor_belt_left_barcode_camera">
    <xacro:point_inertial mass="0.100" />
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_left_barcode_camera.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
  </link>
  <joint
    name="conveyor_base_left_to_barcode_camera"
    type="fixed">
    <xacro:origin_from_config config="${cman_joints}" joint_name="conveyor_belt_left_barcode_camera" />
    <xacro:parent_from_config config="${cman_joints}" joint_name="conveyor_belt_left_barcode_camera" />
    <child
      link="conveyor_belt_left_barcode_camera" />
  </joint>
  <link
    name="conveyor_belt_left_reflective_sensor">
    <xacro:point_inertial mass="0.070" />
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_left_reflective_sensor.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
  </link>
  <joint
    name="conveyor_belt_left_base_to_reflective"
    type="fixed">
    <origin
      xyz="0.242349119077722 -0.0938499999900007 -0.0408000000099999"
      rpy="-1.5707963267949 1.45855003581176E-16 -5.73827871115263E-16" />
    <parent
      link="conveyor_belt_left_base_link" />
    <child
      link="conveyor_belt_left_reflective_sensor" />
    <axis
      xyz="0 0 0" />
  </joint>
  <link
    name="conveyor_belt_left_safety_dist_sensor">
    <xacro:point_inertial mass="0.206" />
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://conveyor_gripper_1_0_description/meshes/conveyor_belt_left_safety_dist_sensor.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
  </link>
  <joint
    name="conveyor_belt_left_base_to_safety_dist"
    type="fixed">
    <origin
      xyz="0.224026046737579 -0.0922499999900007 -0.0129951945604675"
      rpy="0 0 0" />
    <parent
      link="conveyor_belt_left_base_link" />
    <child
      link="conveyor_belt_left_safety_dist_sensor" />
    <axis
      xyz="0 0 0" />
  </joint>
</robot>